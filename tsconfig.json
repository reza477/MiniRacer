{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "noEmit": true,
    "target": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "types": ["react", "react-native"],
    "paths": {
      "@app/*": ["src/app/*"],
      "@screens/*": ["src/screens/*"],
      "@game/*": ["src/game/*"],
      "@ui/*": ["src/ui/*"],
      "@assets/*": ["src/assets/*"]
    }
  },
  "include": ["src", "App.tsx", "index.ts"],
  "exclude": ["node_modules"]
}
